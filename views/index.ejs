<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title>Document</title>
</head>
<body>
    <header>
        
    <form action="/search" method="POST">
        <p id ="sc">
        <input type="text" name="scid" id="scid" placeholder="Buscar por ID">
        <button type="submit">OK</button>
        </p>
    </form>
</header>
    
    <form action="/add" method="POST">
        <fieldset id="dadosa">
        <legend>Dados</legend>
        <p> <label for="id">ID:</label>
        <input type="number" name="id" id="id"> </p>
        <p> <label for="nome">Nome:</label>
        <input type="text" name="nome" id="nome"> </p>
        <p> <label for="preco">Preço:</label>
        <input type="number" step="0.01" min="0" name="preco" id="preco"> </p>
        <p> <label for="desc">Descrição:</label>
        <input type="text" name="desc" id="desc"> </p>
        <button type="submit">OK</button>
        </fieldset>

        </form>
        <% items.forEach(function(item) { %>
            <div class="item-container">
                <div>
                    <p>ID: <%= item.id %></p>
                    <p>Nome: <%= item.nome %></p>
                </div>
                <div class="item-buttons">
                    <form action="/remove" method="POST">
                        <input type="hidden" name="id" value="<%= item.id %>">
                        <button type="submit">Remover</button>
                    </form>
                    <form action="/alterP" method="POST">
                        <input type="hidden" name="id" value="<%= item.id %>">
                        <button type="submit">Alterar</button>
                    </form>
                </div>
            </div>
            <hr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
